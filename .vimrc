set nocompatible

set number
set ruler
set list
set listchars=tab:>-,trail:-,nbsp:%,extends:>,precedes:<,eol:<
set incsearch
set hlsearch
"set nowrap
set showmatch
"set whichwrap=h,l
set nowrapscan
"set ignorecase
"set smartcase
set hidden
set history=2000
set autoindent
set expandtab
set tabstop=8
set shiftwidth=8
set helplang=en

colorscheme desert

nnoremap k   gk
nnoremap j   gj
vnoremap k   gk
vnoremap j   gj
nnoremap gk  k
nnoremap gj  j
vnoremap gk  k
vnoremap gj  j


